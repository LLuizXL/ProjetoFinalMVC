@model ProjetoBackend.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    {
        <style>
            body {
                background-image: url('@Url.Content("~/images/background3.jpg")') !important;
                opacity: 0.8;
            }
        </style>
    }
}

<h1 class="text-center index-paginas">Editar Cliente</h1>
<hr />

<form asp-action="Edit" class="">

    <div class="table-wrapper p-4 rounded-3 bg-form text-light">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClienteId" />
        <div class="row">
            <div class="col-12 col-md-7">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="CnpjCpf" class="control-label"></label>
                    <input asp-for="CnpjCpf" class="form-control" />
                    <span asp-validation-for="CnpjCpf" class="text-danger"></span>
                </div>

            </div>
        </div>

        <div class="row mt-2">
            <div class="col-12 col-md-8">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="Celular" class="control-label"></label>
                    <input asp-for="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-12 col-md-5">
                <div class="form-group">
                    <label asp-for="DataNascimento" class="control-label"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label asp-for="DataCadastro" class="control-label"></label>
                    <input asp-for="DataCadastro" class="form-control" />
                    <span asp-validation-for="DataCadastro" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-3">
                <div class="form-check form-switch">
                    <label asp-for="CadastroAtivo" class="form-label"></label>
                    <select asp-for="CadastroAtivo" class="form-control" asp-items="@ViewBag.Ativo"></select>
                    <span asp-validation-for="CadastroAtivo" class="text-danger"></span>
                </div>

            </div>

        </div>





    </div>
    <div class="row">
        <div class="col-12 mt-4 text-center text-light botao">
            <h3>Lembre-se de checar as informações antes de editar.</h3>
        </div>
    </div>


    <div class="row mt-2">
        <div class="col-2">
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center btn-salvar" />
        </div>



        <div class="col-1 col-md-2"></div>

        <div class="col-5 col-md-4">
            <a class="btn btn-secondary btn-lg btn-salvar" asp-action="Index">Cancelar</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model ProjetoBackend.Models.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center index-paginas">Editar Produto</h1>

<hr />
<div class="table-wrapper bg-form p-4 rounded-3 text-light">


    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProdutoId" />
        <div class="row">
            <div class="col-12 col-md">

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>


            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="CategoriaId" class="control-label"></label>
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="Estoque" class="control-label"></label>
                    <input asp-for="Estoque" class="form-control" />
                    <span asp-validation-for="Estoque" class="text-danger"></span>
                </div>
            </div>
        </div>

    </form>
</div>
<div class="form-group mt-3">
    <button type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center btn-salvar"> Salvar </button>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

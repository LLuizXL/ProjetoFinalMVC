@model IEnumerable<ProjetoBackend.Models.Servico>

@{
    ViewData["Title"] = "Index";
}

<h1 class=" text-center index-paginas">Serviços</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-lg botao-add text-light">
        <ion-icon name="add-circle-outline"></ion-icon>
        ADICIONAR

    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="custom-table text-light">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="custom-table text-light">
                @Html.DisplayNameFor(model => model.ValorServico)
            </th>
            <th class="custom-table text-light"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="custom-table text-light">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
                <td class="custom-table text-light">
                @Html.DisplayFor(modelItem => item.ValorServico)
            </td>
                <td class="custom-table text-light">
                    <a class="btn btn-info btn-md text-light" asp-action="Edit" asp-route-id="@item.ServicoId">Edit</a> 
                    <a class="btn btn-danger btn-md ms-1 text-light" asp-action="Delete" asp-route-id="@item.ServicoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

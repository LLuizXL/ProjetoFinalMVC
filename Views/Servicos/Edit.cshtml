@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Editar Serviço";
    {

        <style>
            body {
                background-image: url('@Url.Content("~/images/background4.jpg")') !important;
            }
        </style>

    }
}

<h1 class="text-center index-paginas">Editar Serviço</h1>


<div class="table-wrapper bg-form rounded-3 p-3">

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ServicoId" />
        <div class="row">
            <div class="col-12">

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="ValorServico" class="control-label"></label>
                <input asp-for="ValorServico" class="form-control" />
                <span asp-validation-for="ValorServico" class="text-danger"></span>
            </div>
        </div>


    </form>

</div>

<div class="row">
    <div class="col-12 mt-4 text-center text-light botao">
        <h3>Lembre-se de checar as informações antes de editar.</h3>
    </div>
</div>


<div class="row mt-2">
    <div class="col-2">
    </div>
    <div class="col-4">
        <input type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center btn-salvar" />
    </div>



    <div class="col-1 col-md-2"></div>

    <div class="col-5 col-md-4">
        <a class="btn btn-secondary btn-lg btn-salvar" asp-action="Index">Cancelar</a>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model ProjetoBackend.Models.Servico

@{
    ViewData["Title"] = "Create";
    {

        <style>
            body {
                background-image: url('@Url.Content("~/images/background4.jpg")') !important;
            }
        </style>

    }
}

<h1 class="index-paginas text-center">Adicionar Serviço</h1>

<hr />
<form asp-action="Create">
    <div class="table-wrapper bg-form rounded-3 p-3 text-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label asp-for="ValorServico" class="control-label"></label>
                <input asp-for="ValorServico" class="form-control" />
                <span asp-validation-for="ValorServico" class="text-danger"></span>
            </div>
        </div>

    </div>


    <div class="row">
        <div class="col-12 mt-4 text-center text-light botao">
            <h3>Lembre-se de checar as informações antes de adicionar.</h3>
        </div>
    </div>


    <div class="row mt-2">
        <div class="col-2">
        </div>
        <div class="col-4">
            <input type="submit" value="Criar" class="btn btn-success btn-salvar btn-lg" />
        </div>



        <div class="col-1 col-md-2"></div>

        <div class="col-5 col-md-4">
            <a class="btn btn-secondary btn-lg btn-salvar" asp-action="Index">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

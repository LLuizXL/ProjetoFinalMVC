@model IEnumerable<ProjetoBackend.Models.ServicoVenda>

@{
    ViewData["Title"] = "Index";
    {
        <style>
            body {
                background-image: url('@Url.Content("~/images/background3.jpg")') !important;
                opacity: 0.8;
            }
        </style>
    }
}

<h1 class="text-center index-paginas">Serviços</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-lg botao-add text-light">
        <ion-icon name="add-circle-outline"></ion-icon>
        ADICIONAR

    </a>
</p>
<div class="table-responsive">

<table class="table">
    <thead>
        <tr>
                <th class="custom-table text-light">
                @Html.DisplayNameFor(model => model.Servico)
            </th>
                <th class="custom-table text-light">
                @Html.DisplayNameFor(model => model.Venda)
            </th>
                <th class="custom-table text-light"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                    <td class="custom-table text-light">
                @Html.DisplayFor(modelItem => item.Servico.Nome)
            </td>
                    <td class="custom-table text-light">
                @Html.DisplayFor(modelItem => item.Venda.VendaId)
            </td>
                    <td class="custom-table text-light">
                <a asp-action="Edit" asp-route-id="@item.ServicoVendaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServicoVendaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServicoVendaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>

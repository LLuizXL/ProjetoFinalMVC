@model IEnumerable<ProjetoBackend.Models.ItemCompra>

@{
    ViewData["Title"] = "Itens Comprados";


    {
        <style>
            body {
                background-image: url('@Url.Content("images/background3.jpg")') !important;
                opacity: 0.8;
            }
        </style>
    }
}

<h1 class="text-center index-paginas">ITENS COMPRADOS</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-lg botao-add text-light">
        <ion-icon name="add-circle-outline"></ion-icon>
        ADICIONAR

    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Compra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Compra.CompraId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    <a asp-controller="ItensCompras" asp-action="Index" asp-route-id="@item.CompraId">Itens da Venda</a> |
                    <a class="btn btn-info btn-md text-light" asp-action="Edit" asp-route-id="@item.ItemCompraId">Edit</a> |

                    <a class="btn btn-danger btn-md ms-1 text-light" asp-action="Delete" asp-route-id="@item.ItemCompraId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

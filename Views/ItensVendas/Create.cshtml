@model ProjetoBackend.Models.ItemVenda

@{
    ViewData["Title"] = "Create";
    {

        <style>
            body {
                background-image: url('@Url.Content("~/images/background4.jpg")') !important;
            }
        </style>

    }
}

<h1 class="text-center index-paginas">Adicionar Item</h1>
<hr />

<form asp-action="Create">
    <div class="table-wrapper bg-form p-3 rounded-3 text-light">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row ">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="VendaId" class="control-label"></label>
                    <input asp-for="VendaId" class="form-control" value=@ViewData["VendaId"] />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label asp-for="ProdutoId" class="control-label"></label>
                    <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId" id="produtoId"></select>
                </div>
            </div>
            <div class="col-12 col-md-2">
                <div class="form-group">
                    <label asp-for="Quantidade" class="control-label"></label>
                    <input asp-for="Quantidade" class="form-control" id="Quantidade" />
                    <span asp-validation-for="Quantidade" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="ValorUnitario" class="control-label"></label>
                    <input asp-for="ValorUnitario" class="form-control" id="ValorUnitario" />
                    <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" id="ValorTotal" />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>

            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-12 mt-4 text-center text-light botao">
            <h3>Lembre-se de checar as informações antes de adicionar.</h3>
        </div>
    </div>
    

    <div class="row mt-2">
        <div class="col-2">
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center btn-salvar" />
        </div>



        <div class="col-1 col-md-2"></div>

        <div class="col-5 col-md-4">
            <a class="btn btn-secondary btn-lg btn-salvar" asp-action="Index">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");

    }
}

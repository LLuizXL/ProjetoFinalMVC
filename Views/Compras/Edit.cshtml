@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Editar Compras";
    {
        <style>
            body {
                background-image: url('@Url.Content("images/background3.jpg")') !important;
                opacity: 0.8;
            }
        </style>
    }

}

<h1 class=" text-center index-paginas">Editar Compras</h1>

<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CompraId" />

<div class="row">
        
        <div class="col-12 col-md">
            <div class="form-group"
            <label asp-for="FornecedorId" class="control-label"></label>
            <input asp-for="FornecedorId" class="form-control" />
            <span asp-validation-for="FornecedorId" class="text-danger"></span>
            </div>
        </div>
    </div>

 <div class="row">
          
        <div class="col-12 col-md-3">
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label"></label>
                <input asp-for="DataCompra" class="form-control" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 col-md-6">
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" />
                <span asp-validation-for="ValorTotal" class="text-danger"></span>
            </div>
        </div>
   </div>
        
   <div class="row">
       <div class="col-4 mt-2">
            <button type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center"> Salvar </button>
       </div>


       <div class="col-4"></div>

       <div class="col-4 mt-2">
            <a  asp-action="Index">Cancelar</a>
       </div>
   </div>
          
           
           
          

</form>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

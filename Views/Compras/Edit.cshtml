@model ProjetoBackend.Models.Compra

@{
    ViewData["Title"] = "Editar Compras";
    {
        <style>
            body {
                background-image: url('@Url.Content("images/background3.jpg")') !important;
                opacity: 0.8;
            }
        </style>
    }

}

<h1 class=" text-center index-paginas">Editar Compras</h1>

<hr />
<div class="table-wrapper bg-form rounded-3 p-3">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CompraId" />
        <div class="row">
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="FornecedorId" class="control-label"></label>
                    <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
                    <span asp-validation-for="FornecedorId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md">
                <div class="form-group">
                    <label asp-for="DataCompra" class="control-label"></label>
                    <input asp-for="DataCompra" class="form-control" />
                    <span asp-validation-for="DataCompra" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label asp-for="ValorTotal" class="control-label"></label>
                    <input asp-for="ValorTotal" class="form-control" readonly />
                    <span asp-validation-for="ValorTotal" class="text-danger"></span>
                </div>
            </div>

            <div class="col">
                <div class="form-group">
                    <label asp-for="Pedido" class="control-label"></label>
                    <input asp-for="Pedido" class="form-control" readonly />
                    <span asp-validation-for="Pedido" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="row">
    <div class="col-12 mt-4 text-center text-light botao">
        <h3>Lembre-se de checar as informações antes de editar.</h3>
    </div>
</div>


<div class="row mt-2">
    <div class="col-2">
    </div>
    <div class="col-4">
        <input type="submit" class="btn btn-success btn-lg d-flex align-itens-center justify-content-center btn-salvar" />
    </div>



    <div class="col-1 col-md-2"></div>

    <div class="col-5 col-md-4">
        <a class="btn btn-secondary btn-lg btn-salvar" asp-action="Index">Cancelar</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

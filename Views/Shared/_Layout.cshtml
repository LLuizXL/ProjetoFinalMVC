<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoBackend</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoBackend.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body style=" background-size: cover; background-repeat: no-repeat; background-color: orchid; opacity: 0.9; max-width: 100vw;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: purple">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="/images/garage2.png" alt="Alternate Text" class="w-50 h-25" /> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre Nós</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Fornecedores" asp-action="Index">Fornecedores</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Categorias" asp-action="Index">Categorias de Produtos</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Produtos" asp-action="Index">Produtos</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Servicos" asp-action="Index">Servicos</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Vendas" asp-action="Index">Vendas</a>
                        </li>
                        <li class="nav-item montserrat">
                            <a class="nav-link text-light" asp-area="" asp-controller="Compras" asp-action="Index">Compras</a>
                        </li>


                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container mb-5">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center text-light mt-5 montserrat" style="background-color: purple">

        <div class="row">
            <div class="col-lg col-12">
                Feito por LLuizXL, todos os direitos reservados ©.
            </div>

            <div class="col-lg-4">
                <b>NFS GARAGE © 2024</b>
            </div>

            <div class="col-lg text-lg-start text-center">

                Siga as redes sociais:

                <a href="https://youtube.com/needforspeed" target="_blank"><ion-icon name="logo-youtube" class="ms-4 text-light"></ion-icon></a>
                <a href="https://facebook.com/needforspeed" target="_blank"><ion-icon name="logo-facebook" class="ms-2 text-light"></ion-icon></a>
                <a href="https://discord.gg/needforspeed" target="_blank"><ion-icon name="logo-discord" class="ms-2 text-light"></ion-icon></a>
                <a href="https://reddit.com/r/needforspeed" target="_blank"><ion-icon name="logo-reddit" class="ms-2 text-light"></ion-icon></a>
                <a href="https://x.com/needforspeed" target="_blank"><ion-icon name="logo-twitter" class="ms-2 text-light"></ion-icon></a>
                <a href="https://instagram.com/needforspeed" target="_blank"><ion-icon name="logo-instagram" class="ms-2 text-light"></ion-icon></a>






            </div>
        </div>
        <div class="row">
            <div class="col-8"></div>
            <div class="col">
                Eletronic Arts Inc © 2024

            </div>
        </div>




    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/ionicons/ionicons.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
